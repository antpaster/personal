<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="1280720"
        android:entries="@array/pref_video_sizes_list_titles"
        android:entryValues="@array/pref_video_sizes_list_values"
        android:key="video_size"
        android:title="@string/pref_title_video_sizes" />

    <ListPreference
        android:defaultValue="700000"
        android:entries="@array/pref_video_bitrate_list_titles"
        android:entryValues="@array/pref_video_bitrate_list_values"
        android:key="video_bitrate"
        android:title="@string/pref_title_video_bitrate" />

    <ListPreference
        android:defaultValue="av"
        android:entries="@array/pref_video_stream_list_titles"
        android:entryValues="@array/pref_video_stream_list_values"
        android:key="video_stream"
        android:title="@string/pref_title_video_stream" />

</PreferenceScreen>
