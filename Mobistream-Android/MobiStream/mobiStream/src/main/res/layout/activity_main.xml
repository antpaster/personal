    <LinearLayout 
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_centerVertical="true"
       	android:layout_alignParentRight="true"
       	android:layout_marginRight="10sp"
       	android:orientation="vertical">
        <ImageButton
            android:id="@+id/recordBack"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/ic_action_back" />
        <ImageButton
            android:id="@+id/recordLight"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/ic_action_light"/>
        <ImageButton
            android:id="@+id/recordVideo"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@drawable/record_big" />
        <ImageButton
       	    android:id="@+id/recordQuality"
            android:layout_width="50sp"
            android:layout_height="50sp"
			android:layout_marginTop="10sp"
            android:background="@drawable/ic_action_quality"/>
        <ImageButton
            android:id="@+id/recordServer"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/ic_action_server"/>
    </LinearLayout>
    
    <TextView
        android:id="@+id/bitrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:text="0 kbps"
        android:textColor="@android:color/white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ProgressBar
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/progress_large_white" />
    </FrameLayout>
</RelativeLayout>
